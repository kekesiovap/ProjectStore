   </rowConstraints>
   <children>
      <AnchorPane prefHeight="223.0" prefWidth="200.0">
         <children>
            <TextField fx:id="usernameText" layoutX="26.0" layoutY="75.0" promptText="Enter username:">
               <font>
                  <Font name="Yu Gothic Regular" size="12.0" />
               </font>
            </TextField>
            <Button fx:id="loginButton" layoutX="74.0" layoutY="149.0" mnemonicParsing="false" onAction="#getEmployee" text="Login">
               <font>
                  <Font name="Yu Gothic Regular" size="12.0" />
               </font>
            </Button>
            <Text fill="#000000c9" layoutX="10.0" layoutY="52.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Employee's login">
               <font>
                  <Font name="Yu Gothic Bold" size="22.0" />
               </font>
            </Text>
            <PasswordField fx:id="passwordText" layoutX="26.0" layoutY="110.0" promptText="Enter password:" />
         </children>
      </AnchorPane>
   </children>
